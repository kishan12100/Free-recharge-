    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* ‡§á‡§Ç‡§ü‡§∞ ‡§´‡§º‡•â‡§®‡•ç‡§ü ‡§≤‡§æ‡§ó‡•Ç ‡§ï‡§∞‡•á‡§Ç */
        body {
            font-family: 'Inter', sans-serif;
            overflow: hidden; /* ‡§ï‡•ã‡§à ‡§∏‡•ç‡§ï‡•ç‡§∞‡•â‡§≤ ‡§¨‡§æ‡§∞ ‡§®‡§π‡•Ä‡§Ç */
            background-color: #87CEEB; /* ‡§π‡§≤‡•ç‡§ï‡§æ ‡§®‡•Ä‡§≤‡§æ ‡§Ü‡§∏‡§Æ‡§æ‡§® */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh; /* ‡§™‡•Ç‡§∞‡•Ä ‡§µ‡•ç‡§Ø‡•Ç‡§™‡•ã‡§∞‡•ç‡§ü ‡§ä‡§Ç‡§ö‡§æ‡§à */
            margin: 0;
            padding: 1rem;
        }
        /* ‡§ó‡•á‡§Æ ‡§ï‡§Ç‡§ü‡•á‡§®‡§∞ */
        #game-container {
            position: relative;
            width: 100%;
            max-width: 400px; /* ‡§Ö‡§ß‡§ø‡§ï‡§§‡§Æ ‡§ö‡•å‡§°‡§º‡§æ‡§à */
            height: 600px; /* ‡§®‡§ø‡§∂‡•ç‡§ö‡§ø‡§§ ‡§ä‡§Ç‡§ö‡§æ‡§à */
            background-color: #ADD8E6; /* ‡§π‡§≤‡•ç‡§ï‡§æ ‡§®‡•Ä‡§≤‡§æ */
            border-radius: 1rem;
            overflow: hidden;
            border: 4px solid #4A5568; /* ‡§ó‡§π‡§∞‡§æ ‡§¨‡•â‡§∞‡•ç‡§°‡§∞ */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            cursor: pointer; /* ‡§ï‡•ç‡§≤‡§ø‡§ï ‡§ï‡§∞‡§®‡•á ‡§Ø‡•ã‡§ó‡•ç‡§Ø ‡§¶‡§ø‡§ñ‡§æ‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è */
        }
        /* ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ */
        #bird {
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: #FFD700; /* ‡§∏‡•Å‡§®‡§π‡§∞‡§æ ‡§™‡•Ä‡§≤‡§æ */
            border-radius: 50%; /* ‡§ó‡•ã‡§≤ ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ */
            left: 50px; /* ‡§¨‡§æ‡§à‡§Ç ‡§ì‡§∞ ‡§∏‡•á ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç */
            top: 250px; /* ‡§¨‡•Ä‡§ö ‡§Æ‡•á‡§Ç ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç */
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem; /* ‡§á‡§Æ‡•ã‡§ú‡•Ä ‡§ï‡§æ ‡§Ü‡§ï‡§æ‡§∞ */
            line-height: 1; /* ‡§á‡§Æ‡•ã‡§ú‡•Ä ‡§ï‡•ã ‡§†‡•Ä‡§ï ‡§∏‡•á ‡§∏‡§Ç‡§∞‡•á‡§ñ‡§ø‡§§ ‡§ï‡§∞‡•á‡§Ç */
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3); /* ‡§π‡§≤‡•ç‡§ï‡§æ ‡§∂‡•à‡§°‡•ã */
            transition: background-color 0.1s ease-in-out; /* ‡§´‡•ç‡§≤‡•à‡§™ ‡§™‡§∞ ‡§∞‡§Ç‡§ó ‡§¨‡§¶‡§≤‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è */
            z-index: 10;
        }
        /* ‡§∏‡•ç‡§ï‡•ã‡§∞ ‡§°‡§ø‡§∏‡•ç‡§™‡•ç‡§≤‡•á */
        #score-display {
            position: absolute;
            top: 1rem;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2.5rem;
            font-weight: bold;
            color: #fff;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5);
            z-index: 20;
        }
        /* ‡§Æ‡•à‡§∏‡•á‡§ú ‡§¨‡•â‡§ï‡•ç‡§∏ (‡§ó‡•á‡§Æ ‡§ì‡§µ‡§∞) */
        #message-box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.85); /* ‡§ó‡§π‡§∞‡§æ ‡§™‡§æ‡§∞‡§¶‡§∞‡•ç‡§∂‡•Ä */
            color: white;
            padding: 2rem;
            border-radius: 1rem;
            text-align: center;
            z-index: 100;
            display: none; /* ‡§∂‡•Å‡§∞‡•Å‡§Ü‡§§ ‡§Æ‡•á‡§Ç ‡§õ‡§ø‡§™‡§æ ‡§π‡•Å‡§Ü */
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
            border: 2px solid #fff;
        }
        /* ‡§¨‡§ü‡§® ‡§∏‡•ç‡§ü‡§æ‡§á‡§≤ */
        button {
            background-color: #4CAF50; /* ‡§π‡§∞‡§æ */
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            border: none;
            cursor: pointer;
            font-size: 1.2rem;
            transition: background-color 0.3s ease, transform 0.1s ease;
            margin-top: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
        button:hover {
            background-color: #45a049; /* ‡§ó‡§π‡§∞‡§æ ‡§π‡§∞‡§æ */
            transform: translateY(-2px);
        }
        button:active {
            transform: translateY(0);
        }
