<body class="bg-gradient-to-br from-blue-300 to-blue-500">

    <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-white text-shadow-lg drop-shadow-xl">‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§â‡§°‡§º‡§æ‡§ì!</h1>

    <div id="game-container" class="relative">
        <div id="score-display">0</div>
        <div id="bird">üê¶</div>

        <div id="message-box">
            <h2 class="text-4xl font-bold mb-4 text-red-400">‡§ó‡•á‡§Æ ‡§ì‡§µ‡§∞!</h2>
            <p class="text-2xl mb-4">‡§Ü‡§™‡§ï‡§æ ‡§∏‡•ç‡§ï‡•ã‡§∞: <span id="final-score">0</span></p>
            <button id="restart-button">‡§´‡§ø‡§∞ ‡§∏‡•á ‡§ñ‡•á‡§≤‡•á‡§Ç</button>
        </div>
    </div>

    <script>
        // ‡§ó‡•á‡§Æ ‡§§‡§§‡•ç‡§µ‡•ã‡§Ç ‡§ï‡•ã ‡§™‡•ç‡§∞‡§æ‡§™‡•ç‡§§ ‡§ï‡§∞‡•á‡§Ç
        const gameContainer = document.getElementById('game-container');
        const bird = document.getElementById('bird');
        const scoreDisplay = document.getElementById('score-display');
        const messageBox = document.getElementById('message-box');
        const finalScoreDisplay = document.getElementById('final-score');
        const restartButton = document.getElementById('restart-button');

        // ‡§ó‡•á‡§Æ ‡§ï‡•Ä ‡§∏‡•ç‡§•‡§ø‡§§‡§ø ‡§ï‡•á ‡§≤‡§ø‡§è ‡§µ‡•à‡§∞‡§ø‡§è‡§¨‡§≤
        let birdY = gameContainer.clientHeight / 2; // ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡•Ä Y ‡§∏‡•ç‡§•‡§ø‡§§‡§ø
        let verticalVelocity = 0; // ‡§ä‡§∞‡•ç‡§ß‡•ç‡§µ‡§æ‡§ß‡§∞ ‡§µ‡•á‡§ó
        const gravity = 0.5; // ‡§ó‡•Å‡§∞‡•Å‡§§‡•ç‡§µ‡§æ‡§ï‡§∞‡•ç‡§∑‡§£ ‡§ï‡•Ä ‡§∂‡§ï‡•ç‡§§‡§ø
        const flapStrength = -8; // ‡§´‡•ç‡§≤‡•à‡§™ ‡§ï‡§∞‡§®‡•á ‡§™‡§∞ ‡§ä‡§™‡§∞ ‡§ú‡§æ‡§®‡•á ‡§ï‡•Ä ‡§∂‡§ï‡•ç‡§§‡§ø (‡§®‡§ï‡§æ‡§∞‡§æ‡§§‡•ç‡§Æ‡§ï ‡§ï‡•ç‡§Ø‡•ã‡§Ç‡§ï‡§ø Y ‡§ä‡§™‡§∞ ‡§ï‡•Ä ‡§ì‡§∞ ‡§ò‡§ü‡§§‡§æ ‡§π‡•à)
        let score = 0;
        let gameRunning = false;
        let gameLoopInterval;

        // ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡•Ä ‡§∏‡•ç‡§•‡§ø‡§§‡§ø ‡§Ö‡§™‡§°‡•á‡§ü ‡§ï‡§∞‡•á‡§Ç
        function updateBirdPosition() {
            birdY += verticalVelocity;
            verticalVelocity += gravity; // ‡§ó‡•Å‡§∞‡•Å‡§§‡•ç‡§µ‡§æ‡§ï‡§∞‡•ç‡§∑‡§£ ‡§≤‡§æ‡§ó‡•Ç ‡§ï‡§∞‡•á‡§Ç

            // ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡•ã ‡§ó‡•á‡§Æ ‡§ï‡§Ç‡§ü‡•á‡§®‡§∞ ‡§ï‡•á ‡§Ö‡§Ç‡§¶‡§∞ ‡§∞‡§ñ‡•á‡§Ç
            if (birdY < 0) {
                birdY = 0;
                verticalVelocity = 0; // ‡§ä‡§™‡§∞ ‡§ï‡•Ä ‡§∏‡•Ä‡§Æ‡§æ ‡§™‡§∞ ‡§∞‡•ã‡§ï‡•á‡§Ç
            }
            if (birdY > gameContainer.clientHeight - bird.clientHeight) {
                birdY = gameContainer.clientHeight - bird.clientHeight;
                gameOver(); // ‡§®‡•Ä‡§ö‡•á ‡§ï‡•Ä ‡§∏‡•Ä‡§Æ‡§æ ‡§∏‡•á ‡§ü‡§ï‡§∞‡§æ‡§®‡•á ‡§™‡§∞ ‡§ó‡•á‡§Æ ‡§ì‡§µ‡§∞
            }

            bird.style.top = `${birdY}px`;
        }

        // ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡•ã ‡§â‡§°‡§º‡§æ‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è (‡§´‡•ç‡§≤‡•à‡§™)
        function flap() {
            if (!gameRunning) { // ‡§Ø‡§¶‡§ø ‡§ó‡•á‡§Æ ‡§ö‡§≤ ‡§®‡§π‡•Ä‡§Ç ‡§∞‡§π‡§æ ‡§π‡•à, ‡§§‡•ã ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
                startGame();
            }
            verticalVelocity = flapStrength; // ‡§ä‡§™‡§∞ ‡§ï‡•Ä ‡§ì‡§∞ ‡§µ‡•á‡§ó ‡§¶‡•á‡§Ç
            // ‡§´‡•ç‡§≤‡•à‡§™ ‡§™‡§∞ ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡§æ ‡§∞‡§Ç‡§ó ‡§¨‡§¶‡§≤‡•á‡§Ç (‡§µ‡§ø‡§ú‡•Å‡§Ö‡§≤ ‡§´‡•Ä‡§°‡§¨‡•à‡§ï)
            bird.style.backgroundColor = '#FFC107'; // ‡§•‡•ã‡§°‡§º‡§æ ‡§®‡§æ‡§∞‡§Ç‡§ó‡•Ä-‡§™‡•Ä‡§≤‡§æ
            setTimeout(() => {
                bird.style.backgroundColor = '#FFD700'; // ‡§Æ‡•Ç‡§≤ ‡§∞‡§Ç‡§ó ‡§™‡§∞ ‡§µ‡§æ‡§™‡§∏
            }, 100);
        }

        // ‡§ó‡•á‡§Æ ‡§ì‡§µ‡§∞
        function gameOver() {
            gameRunning = false;
            clearInterval(gameLoopInterval); // ‡§ó‡•á‡§Æ ‡§≤‡•Ç‡§™ ‡§¨‡§Ç‡§¶ ‡§ï‡§∞‡•á‡§Ç
            finalScoreDisplay.textContent = score;
            messageBox.style.display = 'block'; // ‡§Æ‡•à‡§∏‡•á‡§ú ‡§¨‡•â‡§ï‡•ç‡§∏ ‡§¶‡§ø‡§ñ‡§æ‡§è‡§Ç
            gameContainer.style.cursor = 'default'; // ‡§ï‡§∞‡•ç‡§∏‡§∞ ‡§ï‡•ã ‡§°‡§ø‡§´‡§º‡•â‡§≤‡•ç‡§ü ‡§™‡§∞ ‡§∏‡•á‡§ü ‡§ï‡§∞‡•á‡§Ç
        }

        // ‡§ó‡•á‡§Æ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
        function startGame() {
            // ‡§∏‡§≠‡•Ä ‡§™‡•Å‡§∞‡§æ‡§®‡•Ä ‡§¨‡§æ‡§ß‡§æ‡§ì‡§Ç/‡§§‡§§‡•ç‡§µ‡•ã‡§Ç ‡§ï‡•ã ‡§π‡§ü‡§æ ‡§¶‡•á‡§Ç (‡§Ø‡§¶‡§ø ‡§ï‡•ã‡§à ‡§π‡•ã‡§Ç)
            // ‡§á‡§∏ ‡§ó‡•á‡§Æ ‡§Æ‡•á‡§Ç ‡§ï‡•ã‡§à ‡§¨‡§æ‡§ß‡§æ ‡§®‡§π‡•Ä‡§Ç ‡§π‡•à, ‡§≤‡•á‡§ï‡§ø‡§® ‡§≠‡§µ‡§ø‡§∑‡•ç‡§Ø ‡§ï‡•á ‡§≤‡§ø‡§è
            
            score = 0;
            scoreDisplay.textContent = score;
            birdY = gameContainer.clientHeight / 2; // ‡§ö‡§ø‡§°‡§º‡§ø‡§Ø‡§æ ‡§ï‡•ã ‡§¨‡•Ä‡§ö ‡§Æ‡•á‡§Ç ‡§∞‡•Ä‡§∏‡•á‡§ü ‡§ï‡§∞‡•á‡§Ç
            verticalVelocity = 0;
            messageBox.style.display = 'none'; // ‡§Æ‡•à‡§∏‡•á‡§ú ‡§¨‡•â‡§ï‡•ç‡§∏ ‡§õ‡§ø‡§™‡§æ‡§è‡§Ç
            gameRunning = true;
            gameContainer.style.cursor = 'pointer'; // ‡§ï‡•ç‡§≤‡§ø‡§ï ‡§ï‡§∞‡§®‡•á ‡§Ø‡•ã‡§ó‡•ç‡§Ø ‡§ï‡§∞‡•ç‡§∏‡§∞

            // ‡§ó‡•á‡§Æ ‡§≤‡•Ç‡§™ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
            gameLoopInterval = setInterval(() => {
                updateBirdPosition();
                score++; // ‡§π‡§∞ ‡§´‡•ç‡§∞‡•á‡§Æ ‡§Æ‡•á‡§Ç ‡§∏‡•ç‡§ï‡•ã‡§∞ ‡§¨‡§¢‡§º‡§æ‡§è‡§Ç
                scoreDisplay.textContent = score;
            }, 20); // ‡§π‡§∞ 20ms ‡§™‡§∞ ‡§Ö‡§™‡§°‡•á‡§ü ‡§ï‡§∞‡•á‡§Ç
        }

        // ‡§ï‡•ç‡§≤‡§ø‡§ï/‡§ü‡•à‡§™ ‡§á‡§µ‡•á‡§Ç‡§ü ‡§≤‡§ø‡§∏‡§®‡§∞
        gameContainer.addEventListener('click', flap);
        gameContainer.addEventListener('touchstart', (e) => {
            e.preventDefault(); // ‡§Æ‡•ã‡§¨‡§æ‡§á‡§≤ ‡§™‡§∞ ‡§°‡§ø‡§´‡§º‡•â‡§≤‡•ç‡§ü ‡§ü‡§ö ‡§µ‡•ç‡§Ø‡§µ‡§π‡§æ‡§∞ ‡§ï‡•ã ‡§∞‡•ã‡§ï‡•á‡§Ç (‡§ú‡•à‡§∏‡•á ‡§∏‡•ç‡§ï‡•ç‡§∞‡•â‡§≤‡§ø‡§Ç‡§ó)
            flap();
        });

        // ‡§ï‡•Ä‡§¨‡•ã‡§∞‡•ç‡§° ‡§á‡§µ‡•á‡§Ç‡§ü ‡§≤‡§ø‡§∏‡§®‡§∞ (‡§∏‡•ç‡§™‡•á‡§∏ ‡§¨‡§æ‡§∞)
        document.addEventListener('keydown', (e) => {
            if (e.key === ' ' || e.key === 'ArrowUp') {
                flap();
            }
        });

        // ‡§∞‡•Ä‡§∏‡•ç‡§ü‡§æ‡§∞‡•ç‡§ü ‡§¨‡§ü‡§®
        restartButton.addEventListener('click', startGame);

        // ‡§ú‡§¨ ‡§µ‡§ø‡§Ç‡§°‡•ã ‡§≤‡•ã‡§° ‡§π‡•ã ‡§ú‡§æ‡§è, ‡§§‡•ã ‡§ó‡•á‡§Æ ‡§∂‡•Å‡§∞‡•Ç ‡§ï‡§∞‡•á‡§Ç
        window.onload = startGame;
    </script>
